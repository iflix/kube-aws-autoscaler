{
  "setup": {
    "prepend": true,
    "python": {
      "version": "v3.7"
    }
  },
  "agent": "elastic",
  "steps": [
    {
      "name": "ecr_create_repo",
      "repositoryName": "kube-aws-autoscaler"
    },
    {
      "name": "command",
      "commandName": "run tests",
      "command": "pip install -r requirements.txt && python setup.py test"
    },
    {
      "name": "docker_build",
      "image": "kube-aws-autoscaler",
      "tag": "0.13.1",
      "dockerfile": "Dockerfile"
    },
    {
      "name": "docker_push",
      "image": "kube-aws-autoscaler",
      "tag": "0.13.1",
      "dockerfile": "Dockerfile"
    }
  ]
}
